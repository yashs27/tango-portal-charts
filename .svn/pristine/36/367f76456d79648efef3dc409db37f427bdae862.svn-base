@import "../../constants.scss";
app-licences-detail {
  display: flex;
  flex-direction: column;
  flex: 1 1;
  position: absolute;
  align-items: center;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: $basic-background-color;
  .header {
    display: flex;
    flex-direction: row;
    width: 95%;
    h2 {
      margin: 0px 15px 0 0;
      width: 95%;
      color: $secondary-font-color;
      font-size: 32px;
    }
    .close {
      padding: 8px 50px;
      font-size: 18px;
      font-weight: bold;
      border: none;
      cursor: pointer;
      outline: none;
      color: $button-font-color;
      background-color: $button-close-color;
    }
  }
  .detail {
    margin-top: 50px;
    width: 95%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
    .mat-form-field {
      width: 65%;
    }
    // Change font-size of label
    .mat-form-field-can-float.mat-form-field-should-float {
      .mat-form-field-label {
        font-size: 20px;
      }
    }
    .mat-input-element:disabled {
      font-size: 20px;
      color: $secondary-font-color-dark;
    }
    // Change input underline styles
    .mat-form-field-disabled .mat-form-field-underline {
      background-image: none;
      background-color: $underline-color;
      height: 3px;
    }
    .buy {
      width: 65%;
      display: flex;
      flex-direction: row;
      align-items: left;
      button {
        padding: 15px 0 16px 0;
        font-size: 18px;
        border: none;
        cursor: pointer;
        outline: none;
        color: $primary-font-color;
        background-color: $basic-background-color;
      }
      i:before {
        color: $shopping-cart-color;
      }
      span {
        text-decoration: underline;
      }
    }
    .description {
      width: 65%;
      display: flex;
      flex-direction: column;
      align-items: center;
      span {
        width: 100%;
        &.title {
          color: $secondary-title-color;
        }
        &.content {
          width: 100%;
          min-height: 200px;
          color: $secondary-font-color-dark;
          background-color: $pannel-background-color;
          border-top: 1px solid $border-line-color;
          border-bottom: 1px solid $border-line-color;
        }
      }
    }
  }
}
